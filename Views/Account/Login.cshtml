@model LoginViewModel
<div class="navbar-nav ml-auto action-buttons">
    <div class="nav-item navbar-dark">       
        <div >
            <form asp-action="Login" asp-controller="Account" method="post" role="form">
                <div asp-validation-summary="All" class="btn-danger"></div>
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="form-group">
                    <input type="text" asp-for="UserName" class="form-control" placeholder="Nome de Usuário">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Sua Senha">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary btn-block" value="Login">
            </form>
        </div>
    </div>
</div>