@model LoginViewModel
<div class="navbar-nav ml-auto action-buttons">
    <div class="form-group">
        <div >
            <form asp-action="Login" asp-controller="Account" method="post" role="form">
                <div asp-validation-summary="All" class="btn-danger"></div>
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="form-group">
                    <input type="text" class="form-control" width="150px" asp-for="UserName" placeholder="Username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" width="150px" asp-for="Password" placeholder="Senha" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-success" value="Login">
            </form>
        </div>
    </div>
</div>